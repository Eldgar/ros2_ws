pipeline {
    agent any
    stages {
        stage('Launch Simulation with Docker Compose') {
            steps {
                sh '''
                echo "Stopping any existing containers..."
                sudo docker-compose -f ~/ros2_ws/src/docker-compose.yml down || true

                echo "Starting Docker Compose..."
                sudo docker-compose -f ~/ros2_ws/src/docker-compose.yml up -d
                echo "Waiting for ROS2 containers to initialize..."
                sleep 20
                '''
            }
        }
        stage('Check Gazebo Logs') {
            steps {
                sh '''
                echo "Fetching logs from Gazebo container..."
                sudo docker logs tortoisebot-ros2-gazebo
                '''
            }
        }
        stage('Run Waypoints Test') {
            steps {
                sh '''
                echo "Running tests inside tortoisebot-ros2-test container..."
                sudo docker exec tortoisebot-ros2-test bash -c "
                    source /opt/ros/galactic/setup.bash &&
                    source install/setup.bash &&
                    colcon test --packages-select tortoisebot_waypoints --event-handler=console_direct+ &&
                    colcon test-result --all"
                '''
            }
        }
        stage('Fetch Test Logs') {
            steps {
                sh '''
                echo "Fetching logs from test container..."
                sudo docker logs tortoisebot-ros2-test
                '''
            }
        }
        stage('Cleanup') {
            steps {
                sh '''
                echo "Stopping and removing Docker containers..."
                sudo docker-compose -f ~/ros2_ws/src/tortoisebot_ros2_docker/docker-compose.yml down
                echo "Cleanup complete."
                '''
            }
        }
    }
    triggers {
        pollSCM('H/3 * * * *') // Poll the repository every 3 minutes
    }
}












